{
  "name": "krp-livetiming-client",
  "description": "A client to receive live data from a dedicated or challenge server in kart racing pro.",
  "author": "Fynn Haupt <info@fynnhaupt.de>",
  "version": "1.0.0",
  "license": "AGPL-3.0-only",
  "main": "dist/index.js",
  "module": "dist/index.mjs",
  "types": "dist/index.d.ts",
  "exports": {
    ".": {
      "require": "./dist/index.js",
      "import": "./dist/index.mjs",
      "types": "./dist/index.d.ts"
    }
  },
  "homepage": "https://github.com/krp-races/krp-livetiming-client#readme",
  "repository": {
    "type": "git",
    "url": "https://github.com/krp-races/krp-livetiming-client.git"
  },
  "bugs": {
    "url": "https://github.com/krp-races/krp-livetiming-client/issues"
  },
  "scripts": {
    "build": "rollup -c",
    "lint": "eslint src",
    "lint:fix": "eslint src --fix",
    "format": "prettier src --check --ignore-unknown",
    "format:fix": "prettier src --write --ignore-unknown",
    "prepare": "husky && pnpm run build",
    "test": "jest",
    "test:run": "node --inspect test_local.js"
  },
  "lint-staged": {
    "src/**/*": [
      "eslint --fix",
      "prettier --write --ignore-unknown"
    ]
  },
  "devDependencies": {
    "@eslint/js": "^9.12.0",
    "@rollup/plugin-typescript": "^12.1.0",
    "@types/jest": "^29.5.13",
    "@types/node": "^22.7.5",
    "eslint": "^9.12.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-jest": "^28.8.3",
    "eslint-plugin-prettier": "^5.2.1",
    "glob": "^11.0.0",
    "globals": "^15.11.0",
    "husky": "^9.1.6",
    "jest": "^29.7.0",
    "lint-staged": "^15.2.10",
    "prettier": "3.3.3",
    "rollup": "^4.24.0",
    "ts-jest": "^29.2.5",
    "tslib": "^2.7.0",
    "typescript": "^5.6.3",
    "typescript-eslint": "^8.8.1"
  }
}
